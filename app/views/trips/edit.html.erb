<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Edit Trip</h1>

    <%= form_with(model: @trip, local: true) do |form| %>

      <% if @trip.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@trip.errors.count, "error") %> prohibited
            this trip from being saved:
          </h2>
          <ul>
            <% @trip.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p>
        <%= form.label :destination %><br>
        <%= form.text_field :destination %>
      </p>

      <p>
        <%= form.label :start_date %><br>
        <%= form.text_field :start_date %>
      </p>

      <p>
        <%= form.label :end_date %><br>
        <%= form.text_field :end_date %>
      </p>

      <p>
        <%= form.label :budget %><br>
        <%= form.text_field :budget %>
      </p>

      <p>
        <%= form.submit %>
      </p>

    <% end %>

    <%= link_to 'Back', trips_path %>
  </body>
</html>
